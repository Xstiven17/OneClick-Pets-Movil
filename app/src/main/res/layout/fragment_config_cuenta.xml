<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFondo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfigCuentaFragment"
    >

    <LinearLayout
        android:id="@+id/rectan1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ColorNegro"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnatras"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_atras"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textColor="@color/ColorFondo"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/titulo_config_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectan1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="ConfiguraciÃ³n de cuenta"
        android:textColor="@color/ColorNegro"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ColorRelleno"
        android:layout_below="@id/rectan1"
        >

    </LinearLayout>

    <TextView
        android:id="@+id/nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectan1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="133dp"
        android:text="Nombre_usuario"
        android:textColor="@color/ColorNegro">

    </TextView>


</RelativeLayout>