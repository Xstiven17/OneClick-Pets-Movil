<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFondo"
    tools:context=".RegistroUsuarioFragment">


    <LinearLayout
        android:id="@+id/rectan1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ColorNegro"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnatras"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_atras" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:text="Registro Cuenta"
        android:textColor="@color/ColorFondo"
        android:textSize="20dp" />

</LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Nombres"
        android:layout_below="@id/rectan1"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp"
        android:layout_below="@id/text1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Apellidos"
        android:layout_below="@id/edit1"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit2"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Correo"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit3"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Crear Contraseña"
        android:layout_below="@id/edit3"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit4"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Crear Contraseña"
        android:layout_below="@id/edit4"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit5"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit5"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="-11dp">

        <CheckBox
            android:id="@+id/cbAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar términos y condiciones"
            android:textColor="@color/ColorNegro"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Registrar"
        android:textColor="@color/ColorNegro"
        android:backgroundTint="@color/ColorBoton"
        android:layout_below="@id/edit5"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="140dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="¿Ya tienes cuenta?"
        android:layout_below="@id/boton1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="165dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text=" Iniciar con:"
        android:layout_below="@id/text7"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-11dp"
        android:layout_below="@+id/text8"
        android:gravity="center">


    <ImageView
        android:id="@+id/btnfacebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/facebook"
        android:layout_below="@id/text8"
        />

        <ImageView
            android:id="@+id/btngmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/gmail"
            android:layout_below="@id/text8">
        </ImageView>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/rectan2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorNegro"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion legal | Politicas de privacidad"
            android:textColor="@color/ColorFondo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyrigth © 2022 | OneClick Pets"
            android:textColor="@color/ColorFondo"/>
    </LinearLayout>




</RelativeLayout>