<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFondo"
    tools:context=".RegVendedorFragment">


    <View
        android:id="@+id/rectan1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ColorNegro" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_atras"
    android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completa datos para crear cuenta"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Agregar e-mail"
        android:layout_below="@id/rectan1"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@id/text1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Agregar Nit"
        android:layout_below="@id/edit1"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@id/text2"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Valida tu teléfono"
        android:layout_below="@id/edit2"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@id/text3"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Crea una contraseña"
        android:layout_below="@id/edit3"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@id/text4"/>

    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Guardar"
        android:textColor="@color/ColorNegro"
        android:backgroundTint="@color/ColorBoton"
        android:layout_below="@id/edit4"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Necesito ayuda para ingresar"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp"
        android:textStyle="bold" />


    <View
        android:id="@+id/rectan2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorNegro"
        android:layout_marginTop="16dp"/>
</RelativeLayout>

