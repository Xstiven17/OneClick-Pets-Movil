<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFondo"
    tools:context="ayudapqrFragment">

    <LinearLayout
        android:id="@+id/rectan1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ColorNegro"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnatras"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_atras" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="ayuda PQR"
            android:textColor="@color/ColorFondo"
            android:textSize="23dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Nombres y Apellidos Completos"
        android:layout_below="@id/rectan1"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp"

        android:layout_below="@id/text1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Nro. de documento"
        android:layout_below="@id/edit1"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit2"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text=" Nro. teléfono"
        android:layout_below="@id/edit2"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit3"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/ColorNegro"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorNegro"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Escribe tu PQR"
        android:layout_below="@id/edit3"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/etPQRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginTop="4dp"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:gravity="top" />


    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:text="Entregar"
        android:textColor="@color/ColorNegro"
        android:backgroundTint="@color/ColorBoton"
        android:layout_below="@id/etPQRS"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_below="@id/etPQRS"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/ColorBoton"
        android:text="Guardar"
        android:textColor="@color/ColorNegro" />




    <LinearLayout
        android:id="@+id/rectan2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorNegro"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion legal | Politicas de privacidad"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyrigth © 2022 | OneClick Pets"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>


