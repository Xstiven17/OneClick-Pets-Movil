<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/ColorFondo"
    >

        <ImageView
            android:id="@+id/ivProducto"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:background="@color/ColorNegro" />

        <ImageButton
            android:id="@+id/ibCarritoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/ColorIconos"
            android:src="@drawable/carrito_de_compras" />

        <TextView
            android:id="@+id/tvProductoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProducto"
            android:layout_alignTop="@id/ivProducto"
            android:layout_marginStart="40dp"
            android:textSize="30dp"
            tools:text="Donkan" />

        <TextView
            android:id="@+id/tvPrecioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tvProductoName"
            android:layout_toEndOf="@id/ivProducto"
            android:layout_marginStart="60dp"
            tools:text="1000"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrecioProducto"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/ivProducto"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/ColorBoton"
            android:text="Comprar"
            android:textColor="@color/ColorNegro" />




</RelativeLayout>